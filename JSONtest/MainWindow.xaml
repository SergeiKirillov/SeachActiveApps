<Window x:Class="JSONtest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONtest"
        mc:Ignorable="d"
        Title="ToDoApp" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgToDoList" FontSize="16" FontWeight="Bold" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="False" Header="CreationData" Width="180"></DataGridTextColumn>
                <DataGridCheckBoxColumn IsReadOnly="True" Header="Done" Width="80"></DataGridCheckBoxColumn>
                <DataGridTextColumn IsReadOnly="True" Header="ToDo" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
            
            
        </DataGrid>
       
    </Grid>
</Window>
